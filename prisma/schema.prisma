// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  nome      String
  data      DateTime
  psicologo Psicologo?
  paciente  Paciente?
}

model Psicologo {
  id       Int        @id @default(autoincrement())
  userid   Int        @unique
  approach String?
  user     User       @relation(fields: [userid], references: [id])
  paciente Paciente[]
}

model Paciente {
  id          Int       @id @default(autoincrement())
  userId      Int       @unique
  user        User      @relation(fields: [userId], references: [id])
  psicologoId Int
  psicologo   Psicologo @relation(fields: [psicologoId], references: [id])
  rpd         Rpd[]
}

model Rpd {
  id            Int             @id @default(autoincrement())
  situacao      String
  // fisiologia    String
  // pensamentos   String
  // comportamento String
  humor         RpdHumor[]
  RpdSentimento RpdSentimento[]
  Paciente      Paciente?       @relation(fields: [pacienteId], references: [id])
  pacienteId    Int?
}

model RpdSentimento {
  idRpd        Int
  idSentimento Int
  rpd          Rpd        @relation(fields: [idRpd], references: [id])
  sentimento   Sentimento @relation(fields: [idSentimento], references: [id])

  @@id([idRpd, idSentimento])
}

model Sentimento {
  id            Int             @id @default(autoincrement())
  texto         String
  RpdSentimento RpdSentimento[]
}

model RpdHumor {
  idRpd   Int
  idHumor Int
  rpd     Rpd   @relation(fields: [idRpd], references: [id])
  humor   Humor @relation(fields: [idHumor], references: [id])

  @@id([idHumor, idRpd])
}

model Humor {
  id       Int        @id @default(autoincrement())
  texto    String
  RpdHumor RpdHumor[]
}
